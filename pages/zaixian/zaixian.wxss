/* pages/catalogIndex/catalogIndex.wxss */
.myplace{
  height: 60rpx;
}
.myline{
  border-bottom: 1rpx solid #e8e8e8;
  margin-bottom: 30rpx;
}
.catalog-wrap{
  display: flex;
  text-align: center;
  height: 60rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  background-color: white;
}
.catalog-big{
  flex: 1 0 auto;
  border-bottom: 1rpx solid #e8e8e8;
  padding-bottom: 10rpx;
}
.catalog-big.active{
  color: #3e86ff;
  border-bottom: 1rpx solid #3e86ff;
}
.cata-small-wrap{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin: 30rpx 0;
}
.cata-small{
  flex: 0 0 25vw;
  text-align: center;
  padding: 0 20rpx;
  font-size: 26rpx;
}
.icon{
  height: 65rpx;
  margin-bottom: 10rpx;
}
.myiconfont{
  font-size: 76rpx;
  margin-bottom: 10rpx;
}
.second-level{
  margin: 10rpx 0 20rpx 0;
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  height: 90rpx;
  border-top:20rpx solid #eee;
}
.second-level:first-child{
  border:0;
}