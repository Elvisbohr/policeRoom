/* pages/index/index.wxss */
.pages{
     overflow-x: hidden; 
}
.banner {
    width: 100%;
    height: 22%;
    position: relative;
    background-repeat: no-repeat;
    background-size: 100% auto;
    background-image: url('https://jws.kulizhi.com:443/jws/upload/head/2017/8/201708181922496415.jpg');
}

.banner swiper {
    width: 100%;
    height: 100%;
}

.banner swiper .slide-image {
    width: 100%;
    height: 100%;
}

.btnform {
    width: 220rpx;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    top: 4rpx;
    left: 4rpx;
}

.btnform image {
    width: 55rpx;
}

.formtext {
    font-size: 0.8rem;
    line-height: 1rem;
    width: 70%;
    color: #fff;
}

/* nav */

.navList {
    width: 25%;
    height: 160rpx;
}

.navListTit {
    color: #7d7d7d;
    font-size: 24rpx;
    margin: 15rpx 0 0;
}

.navListImg {
    width: 70rpx;
    height: 70rpx;
}
.navListImg1{
  width: 60rpx;
  height: 60rpx;
}
/* 头条 */

.new {
    width: 100%;
    height: 140rpx;
    border-top: 20rpx solid #f3f3f3;
    border-bottom: 20rpx solid #f3f3f3;
}

.newMain {
    height: 100rpx;
}

.newL {
    width: 194rpx;
    height: inherit;
    color: #fe6850;
    font-size: 32rpx;
    text-align: center;
    font-weight: bold;
    border-right: 1px solid #e5e5e5;
    padding: 10rpx 0;
}

.newR {
    width: 550rpx;
    color: #535353;
    height: inherit;
    font-size: 26rpx;
}

.newR swiper {
    height: inherit;
    width: inherit;
    padding: 10rpx 0 10rpx 16rpx;
}

.newItemList {
    width: 85%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 40rpx;
}

/* 列表 */

.djMenu {
    box-sizing: border-box;
    /* padding-left: 15px; */
    /* padding-right: 15px; */
     overflow: hidden; 
     padding:0 24rpx;
}

.djList {
    width: 100%;
    padding: 20rpx 0;
    overflow: hidden;
    border-bottom: 1px solid #f1f1f1;
}

.djList .listL {
    width: 35%;
    height: 170rpx;
    display: inline-block;
}

.djList .listR {
    width: 64%;
    padding: 0 2.5%;
    font-size: 14px;
    display: inline-flex;
    flex-direction: column;
    justify-content: space-between;
}

.Rbottom {
    width: 100%;
    font-size: 12px;
    color: #a0a0a0;
    /* display: flex;
    justify-content: space-between;
    align-items: center; */
}

.bState {
    color: #3e86ff;
    border: 1px solid #3e86ff;
    padding: 2px 5px;
    border-radius: 3px;
