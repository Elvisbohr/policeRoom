/* pages/suishou/suishou.wxss */
page{
  background-color: #efefef;
}
.slide{
  width: 100%;
  height: 300rpx;
}
.slide-image{
  height: 100%;
}
.content{
  padding: 20rpx;
}
.bigTitle{
  border-left: 6rpx solid #2979ff;
  margin: 20rpx 0;
  padding-left: 10rpx;
  color: #7f7f7f;
  font-size: 32rpx;
}
.list-wrap{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.item{
  flex: 0 0 46vw;
  background-color: white;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.img{
  width: 100%;
  height: 220rpx;
}
.title{
  font-size: 30rpx;
  margin: 10rpx 0;
  width: 40vw;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.qu{
  color: #2979ff;
  border: 1rpx solid #2979ff;
  border-radius: 15rpx;
  display: inline-block;
  padding: 1rpx 10rpx;
  font-size: 24rpx;
  margin: 0 0 15rpx;
}
.item-bottom{
  color: #a6a6a6;
  overflow: hidden;
}
.time{
  float: left;
}
.look{
  float: right;
}
.eye{
  width: 35rpx;
  height: 20rpx;
  display: inline-block;
  margin-right: 5rpx;
}
.place{
  height: 100rpx;
}
.bottom{
  background-color: white;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
}
.btn{
  background-color: #2979ff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  text-align: center;
  color: white;
  width: 80%;
  margin: 10rpx auto;
  font-size: 32rpx;
}
.bottom-tips{
  width: 100%;
  color: #aaaaaa;
  text-align: center;
}