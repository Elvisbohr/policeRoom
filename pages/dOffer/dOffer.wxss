/* pages/dOffer/dOffer.wxss */
.pages{
  background:#e8e8e8;
  padding:35rpx 25rpx;
  position: relative;
}
.scroll{
  width:100%;
  height:100%;
}
.scroll .box{
  width:100%;
  padding-top:10rpx;
}
.li{
  width:100%;
  height:200rpx;
  background:#fff;
  border-radius: 10rpx;
  padding:15rpx;
  box-shadow: 0 0 50rpx #d4dbe8;
  font-size:24rpx;
  position: relative;
  margin-bottom: 30rpx;
}
.li .header{
  color:#a0a0a0;
  font-size: 24rpx;
}
.li .time{
  margin-right:150rpx;
}
.con{
  margin:15rpx 0;
  color:#535353;
  font-size:26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.bottom image{
  width:50rpx;
  height:50rpx;
}
.ti{
  position: absolute;
  width:110rpx;
  height:10rpx;
  border-radius: 40rpx 40rpx 0 0 ;
  top:-10rpx;
  right:25rpx;
  background:#1865f1;
  z-index:1;
}
.ti1{
  position: absolute;
  width:100rpx;
  height:50rpx;
  top:-10rpx;
  right:30rpx;
  background:#2979ff;
  font-size: 24rpx;
  color:#fff;
  text-align: center;
  padding-top:10rpx;
  line-height: 34rpx;
  z-index:2;
}
.a1{
  background:#e79226;
}
.a11{
  background:#faae4b;
}
.a2{
  background:#7f8183;
}
.a22{
  background:#ababab;
}

.edit-btn {
  position: fixed;
  top: 81%;
  right: 0;
  width: 12.5%;
  z-index:100;
}

.edit-btn image {
  width: 100%;
}
.jia{
  text-align: center;
}
.noNum{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  overflow: hidden;
}
.noNum image{
  width:100%;
  height:100%;
}