/* pages/write/write.wxss */

page {
  background: #f7f7fa;
  min-height: 100%;
}

.caption, .fill-info {
  width: 98%;
  margin: 0 auto;
}

.caption {
  height: 110rpx;
  line-height: 110rpx;
  border-bottom: 1px solid #dcdcdc;
}

.caption .caption-line {
  left: 3.2%;
}

.caption .text {
  margin-left: 6.5%;
}

.caption image {
  width: 52.63rpx;
}

.choose-type {
  padding: 39rpx 0 6rpx;
  z-index: 3;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid #dcdcdc;
  width: 98%;
  margin: 0 auto;
}

.choose-type .type-item {
  border-radius: 3px;
  box-sizing: border-box;
  padding: 0 7px;
  height: 52.55rpx;
  line-height: 52.55rpx;
  position: relative;
  font-size: 0.82rem;
  border: 1px solid #dcdcdc;
  color: #aaa;
  margin: 0 2.3% 33rpx;
  text-align: center;
}

.choose-type .type-item.on {
  background: #6a9ef7;
  color: #fff;
}

.choose-type .type-item icon {
  position: absolute;
  right: -10px;
  top: -10px;
}

.choose-type .green-btn {
  float: right;
  margin-right: 2.3%;
}

/* 填写信息框 */

.fill-info input {
  font-family: "微软雅黑";
  color: #aaa;
}

.fill-info .content-box, .fill-info .icon-box {
  width: 89.7%;
  margin: 0 auto;
}

.fill-info .content-box .textarea-box {
  height: 200px;
  overflow: hidden;
  margin: 15px 0;
}

.fill-info .content-box textarea {
  font-size: 14px;
  line-height: 20px;
  height: 200px;
  overflow: hidden;
  margin: 0;
}

.fill-info .textarea {
  color: #707070;
  font-size: 0.85rem;
  width: 100%;
  height: 80px;
}

.fill-info .img-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.fill-info .img-box .img-item {
  width: 23%;
  border-radius: 3px;
  overflow: hidden;
  margin-right: 1.2%;
  margin-bottom: 2%;
  position: relative;
  padding-top: 8px;
}

.fill-info .img-box .img-item icon {
  position: absolute;
  right: 0;
  top: 0;
}

.fill-info .img-box .img-item image {
  width: 84%;
  height: 100rpx;
  display: block;
  border: 1px solid #dcdcdc;
}

.fill-info .video-box {
  margin-bottom: 2%;
}

.fill-info .video-box video {
  width: 100%;
  height: 500rpx;
}

.fill-info .icon-box {
  text-align: right;
}

.fill-info .icon-box image {
  width: 39px;
  margin-right: 10px;
}

