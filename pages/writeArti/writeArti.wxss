.tag, .cover {
  border-bottom: 1px solid #dcdcdc;
  width: 98%;
  margin: 0 auto;
}

.tag{
  height: 90rpx;
  line-height: 90rpx;
  color: #aaa;
  font-size: 0.82rem;
  padding-left: 6.5%;
  box-sizing: border-box;
}
.title{
  width:98%;
  min-height: 90rpx;
  margin:0 auto;
  padding:0 40rpx;
  border-bottom: 1px solid #dcdcdc;
}
.title input {
  font-family: "微软雅黑";
}
.title label{
  white-space:nowrap;
}

.cover{
  color: #bfbfbf;
  font-size: 0.875rem;
  line-height: 90rpx;
  padding-left: 6.5%;
  padding-bottom:25rpx;
}
.cover .img-box{
  width: 4rem;
  height: 4rem;
  position: relative;
}
.cover .img-box view{
  position: absolute;
  width: 100%;
  height: 100%;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  text-align: center;
  top: 0;
  left: 0;
  background:rgba(0,0,0,0.2);
}
.cover .img-box .chooseSrc{
  width: 100%;
  height: 100%;
  display: block;
}

.cover .img-box view image{
  width: 2.2rem;
  margin: 0 auto;
  display: block;
}
.label {
  font-size: 0.82rem;
  padding-left: 6.5%;
  white-space: nowrap;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
}

.flex {
  display: -webkit-flex;
  display: flex;
}

.hs {
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
}

.vc {
  -webkit-align-items: center;
  align-items: center;
}
