/* pages/wxsq/wxsq.wxss */
.pages{
  background:#e8e8e8;
  padding:35rpx 25rpx;
  position: relative;
}
.scroll{
  width:100%;
  height:100%;
}
.scroll .box{
  width:100%;
  padding-top:10rpx;
}
.li{
  width:100%;
  height:155rpx;
  background:#fff;
  border-radius: 10rpx;
  padding:15rpx;
  box-shadow: 0 0 50rpx #d4dbe8;
  font-size:24rpx;
  position: relative;
  margin-bottom: 30rpx;
}
.img{
  width:170rpx;
  height:100%;
  border-radius: 10rpx;
  background:#dcdcdc;
}
.img image{
  width:100%;
  height:100%;
}
.con{
  width:calc(100% - 170rpx);
  padding-left:26rpx;
}
.con > view{
  width:100%;
}
.title{
  width:50%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 32rpx;
}
.tip{
  border:1px solid #2979ff;
  color:#2979ff;
  padding:1rpx 15rpx;
  border-radius: 10rpx;
}
.time{
    color:#a0a0a0;
}
.ti{
  position: absolute;
  width:100rpx;
  height:10rpx;
  border-radius: 40rpx 40rpx 0 0 ;
  top:-10rpx;
  right:55rpx;
  background:#1865f1;
}
.ti1{
  position: absolute;
  width:90rpx;
  height:90rpx;
  top:-10rpx;
  right:60rpx;
  background:#2979ff;
  font-size: 24rpx;
  color:#fff;
  text-align: center;
  padding-top:10rpx;
  line-height: 34rpx;
}
.a1{
  background:#e79226;
}
.a11{
  background:#faae4b;
}
.a2{
  background:#7f8183;
}
.a22{
  background:#ababab;
}

.edit-btn {
  position: fixed;
  top: 81%;
  right: 0;
  width: 12.5%;
}

.edit-btn image {
  width: 100%;
}
.jia{
  text-align: center;
}
.noNum{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  overflow: hidden;
}
.noNum image{
  width:100%;
  height:100%;
}