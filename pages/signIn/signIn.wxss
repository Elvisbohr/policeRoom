/* pages/signIn/signIn.wxss */
.pages{
    position: relative;
    background: #efefef;
}
icon{
    display: block;
}
.signBj{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}
.mian{
    position: absolute;
    z-index: 9;
    color: #2979ff;
    text-align: center;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.locationIcon{
    font-size: 30rpx;
}
.locationTit{
    font-size: 30rpx;
    font-weight: bold;
    margin-top: 24rpx;    
}
.locationTxt{
    margin-top: 24rpx;    
    font-size: 24rpx;
}
.locationBtn{
    margin-top: 140rpx;
    width: 250rpx;
    height: 250rpx;
    border: 16rpx solid #fcc569;
    border-radius: 125rpx;
    color: #333333;
}
.time{
    font-size: 40rpx;
    font-weight: bold;
}