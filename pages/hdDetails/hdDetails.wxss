/* pages/hdDetails/hdDetails.wxss */
.pages{
    color: #333333;
}
.head{
    padding: 24rpx 0;
}
.headTit{
    font-size: 30rpx;
    margin: 0 0 0 25rpx;
    font-weight: bold;
}
.headMain{
    color: #535353;
    font-size: 24rpx;
    line-height: 44rpx;
}
.headMainL{
    width: 156rpx;
    height: 186rpx;
    margin: 20px 40rpx 30rpx;
}
/* 活动详情 */
.details{
   border-top: 24rpx solid #ebebeb; 
   border-bottom: 24rpx solid #ebebeb; 
   padding: 30rpx 24rpx;
}
.detailsTit{
    font-size: 30rpx;
    font-weight: bold;
    border-left: 4rpx solid #2979ff;
    padding-left: 14rpx;
    margin-bottom: 20rpx;
}
.detailsList{
    line-height: 26rpx;
    padding: 15rpx 0;
}
/* 活动简介 */
.intro{
    overflow: hidden;
}
.introTit{
    height: 76rpx;
    border-bottom: 1px solid #ebebeb;    
}
.introTit text{
    border-left: 4rpx solid #2979ff;
    padding-left: 14rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 76rpx;
    margin-left: 24rpx;
}
.introListItem{
    padding: 20rpx 24rpx;
}
.introListItemTit{
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}
.introListItemCont{
    line-height: 44rpx;
    padding-left: 60rpx;
}
/* 联系人 */
.contacts{
    font-size: 30rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20rpx;
}
.signUp{
    padding: 16rpx 24rpx;
    border-top: 1px solid #ebebeb;
    overflow: hidden; 
}
.signUpBtn{
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #fff;
    font-size: 26rpx;
    background: #2fbbff;
}